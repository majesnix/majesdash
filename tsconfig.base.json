{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@majesdash/auth": ["libs/auth/src/index.ts"],
      "@majesdash/backend": ["libs/backend/src/index.ts"],
      "@majesdash/dashboard": ["libs/dashboard/src/index.ts"],
      "@majesdash/data": ["libs/data/src/index.ts"],
      "@majesdash/layout": ["libs/layout/src/index.ts"],
      "@majesdash/material": ["libs/material/src/index.ts"],
      "@majesdash/settings": ["libs/settings/src/index.ts"],
    }
  },
  "exclude": ["node_modules", "tmp"]
}
